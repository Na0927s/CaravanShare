{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable decorators
    "emitDecoratorMetadata": true   // Emit metadata for decorators
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
